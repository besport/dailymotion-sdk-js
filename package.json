      "src/core/prelude.js",
      "src/common/array.js",
      "src/core/player.js",
      "src/core/epilogue.js",
      "src/core/qs.js"
    ]
  },
  "husky": {
      "hooks": {
          "pre-commit": "lint-staged"
      }
  },
  "lint-staged": {
      "*.{js,css,md}": [
          "prettier --write",
          "git add"
      ]
